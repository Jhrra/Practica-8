			    } 
			  }			
	break;		
	case 5:
		if(a==5){
		 printf("La maquina igual selecciono Spock, empate ");
		}
		else{
		  if(a==1){
		     printf("La maquina selecciono piedra, por lo tanto Spock vaporiza piedra, usuario gana ");
