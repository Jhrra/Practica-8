				   }		
			    }
			  }
			}
		}			
	break;
	case 4:
		if(a==4){
		printf("La maquina igual selecciono lagarto, empate ");
		 }
		   else{
		    	if(a==1){
		       printf("La maquina selecciono piedra, por lo tanto piedra aplasta lagarto, maquina gana ");
		    	}
		     else {
			    if(a==2){
			     printf("La maquina selecciono papel,por lo tanto lagarto devora papel, usuario gana ");
