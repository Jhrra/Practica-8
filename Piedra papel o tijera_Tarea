			     if(a==4){
		        printf("La maquina selecciono lagarto, por lo tanto lagarto devora papel, maquina gana ");
			     }
	        	else {
			       if(a==5){
		           printf("La maquina selecciono Spock, por lo tanto papel desautoriza a Spock, usuario gana ");
			       }		
		 	      }
			    } 
		   }
		}
			
	break;
	case 3:
		if(a==3){
