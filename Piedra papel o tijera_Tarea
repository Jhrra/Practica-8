	case 1:
		if(a==1){
		printf("La maquina igual selecciono piedra, empate ");
	    }
		else{
			if(a==2){
		     printf("La maquina selecciono papel, por lo tanto papel cubre piedra, maquina gana ");
			}
		  else{
			if(a==3){
			 printf("La maquina selecciono tijera, por lo tanto pidra rompe tijera, usuario gana ");
